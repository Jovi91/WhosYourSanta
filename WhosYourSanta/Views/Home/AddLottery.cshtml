                    <div class="lottery-checkbox">
                        <label asp-for="AdminTakesPartInLottery">
                            <input id="takePart-checkbox" asp-for="AdminTakesPartInLottery" onchange="FillDataWithAdminEmail('@user')" />
                            @Html.DisplayNameFor(m => m.AdminTakesPartInLottery)
                        </label>
                    </div>

                    @*<div id="AdminAsSanta" class="AdminAsSanta" style="background-color:darkgoldenrod; display: none">
                            <input class="form-control addLottery-form-control" placeholder="Nick or Name" />
                        </div>*@


                </div>


                <div class="lottery-dataSection">
                    <p class ="lbl-addSanta">Dodaj mikołajów do loterii</p>
                    <div style="position:relative">
                        <input asp-for="Santa.Name" autocomplete="off" id="SantaName" class="form-addSanta form-control" placeholder="Imię lub Nick" />
                        <span asp-validation-for="Santa.Name" class="text-danger"></span>
                        <input asp-for="Santa.Email" autocomplete="off" id="SantaEmail" class="form-addSanta form-control" placeholder="Email" />
                        <span asp-validation-for="Santa.Email" id="field-validation-error" class="text-danger"></span>


                    </div>

                    <div class="form-group btn-addSanta">
                        <input type="button" value="Dodaj" class="btn btn-primary" onclick="AddSantaToTheList()" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                @* onclick="CreateObjectFromArray()"*@
                @*<input type="button" id="submitLotteryBtn" value="Create" class="btn btn-primary" onclick="CreateObjectFromArray()" />*@
                <input type="button" id="submitLotteryBtn" value="Stwórz Loterię" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="half notebook" id="santaListNotebook">
        <div id="SantaListContent">
            <ol id="SantaList">
