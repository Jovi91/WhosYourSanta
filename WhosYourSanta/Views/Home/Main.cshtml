@model IEnumerable<WhosYourSanta.Models.Lottery>

@{
    ViewData["Title"] = "Main";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>

            <div class="row">
                <div class="column" style="width:25%">
                    <form method="post" asp-action="Index" asp-controller="Lottery">
                        <button type="submit" class="btn btn-primary" style="width:90%; height:90%;">
                            Add Lottery
                        </button>
                    </form>
                </div>
                <div class="column" style="width:70%">

                    @foreach (var item in Model)
                    {
                    <form method="post">
                        <button asp-controller="Home" asp-action="Index" style="width: 100%; height: 25%; background-image: url(wwwroot/img/crazy-christmas.jpg);">@item.Name</button>
                        <input type="image" src="~/img/crazy-christmas.jpg" alt="@item.Name" asp-controller="Home"
                        asp-action="Index" style="width:100%; height:40%">
                    </form>
   
                    }

                </div>
            </div>

        
    </tbody>
</table>
