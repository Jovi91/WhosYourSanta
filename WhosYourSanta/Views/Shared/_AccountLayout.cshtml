@inject UserManager<IdentityUser> userManager;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post"  asp-action="@ViewData["Title"]" class="register-form">
    <div>
        <div class="text-center">
            <h3 class="font-christmas">@ViewData["Title"] </h3>
            <img src="~/img/santa-avatar.jpg" class="rounded-circle img-centered" alt="Cinque Terre" />
        </div>
        @RenderBody()
    </div>
    <div class="form-group">
        <input type="submit" value="@ViewData["ButtonValue"]" class="btn neon" />
    </div>
    <a asp-action="@ViewData["LogTo"]" style=" float: right; font-size: 14px;">@ViewData["LogTo"]</a>
</form>

@RenderSection("Scripts", required: false)